<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo do ProgressBar -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Cor de fundo -->
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    <!-- Camada de progresso com cor dinâmica -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/darker_gray" /> <!-- Cor padrão do preenchimento -->
            <size android:width="32dp" android:height="32dp" /> <!-- Tamanho menor que o fundo -->
        </shape>
    </item>
</layer-list>